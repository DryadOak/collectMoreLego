 <!-- improve login style, include link to sign-up, incude guest username and PW on git hub -->
 
 <div class="login-container">
    
    <div class="login-form-container right-panel-active">
        <!-- Sign Up -->
        <div class="container__form container--signup">
            <form id="form1" class="form" action="/signup" method="POST" onsubmit="event.preventDefault(); DOMUtils.handleFormSubmit(this, '/signup'); return false;">
                <h2 class="form__title">Sign Up</h2>
                <input type="text" name="userName" placeholder="User" class="input" />
                <input type="email" name="email" placeholder="Email" class="input" />
                <input type="password" name="password" placeholder="Password" class="input" />
                <input type="password" name="confirmPassword" placeholder="Confirm Password" class="input" />
                <button type="submit" class="btn">Sign Up</button>
            </form>
        </div>
            
        <!-- Sign In -->
        <div class="container__form container--signin">
            <form id="form2" class="form" action="/login" method="POST" onsubmit="event.preventDefault(); DOMUtils.handleFormSubmit(this, '/login'); return false;">
                <h2 class="form__title">Sign In</h2>
                <input type="email" name="email" placeholder="Email" class="input" />
                <input type="password" name="password" placeholder="Password" class="input" />
                <button type="submit" class="btn">Sign In</button>
            </form>
        </div>

        <!-- Overlay -->
        <div class="container__overlay">
            <div id="flashMessages"></div>
            <div class="login-overlay">
                <div class="overlay__panel overlay--left">
                    <button class="btn" id="signIn">Sign In</button>
                </div>
                <div class="overlay__panel overlay--right">
                    <button class="btn" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</div>
